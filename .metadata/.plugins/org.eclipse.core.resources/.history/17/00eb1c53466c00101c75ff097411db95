package com.ishika.foodwaste.web.security;


import org.springframework.security.core.GrantedAuthority;
import org.springframework.security.core.authority.SimpleGrantedAuthority;
import org.springframework.security.core.userdetails.UserDetails;

import com.ishika.foodwaste.jpa.entity.User;

import java.util.Collection;
import java.util.Collections;

public class CustomUserDetails implements UserDetails {

    private final User user; // ðŸ”¸ Entity ka object rakha gaya

    public CustomUserDetails(User user) {
        this.user = user;
    }

    @Override
    public Collection<? extends GrantedAuthority> getAuthorities() {
        if (user.getRole() != null) {
            return Collections.singleton(new SimpleGrantedAuthority(user.getRole().name()));
        } else {
            return Collections.emptyList();  // No role, return empty list
        }
    }


    @Override
    public String getPassword() {
        return user.getPassword(); // Password uthaya
    }

    @Override
    public String getUsername() {
        return user.getEmail(); // Email uthaya as username
    }

    @Override
    public boolean isAccountNonExpired() {
        return true;
    }

    @Override
    public boolean isAccountNonLocked() {
        return true;
    }

    @Override
    public boolean isCredentialsNonExpired() {
        return true;
    }

    @Override
    public boolean isEnabled() {
        return true;
    }

    // Optionally getter to access user anywhere if needed
    public User getUser() {
        return user;
    }
}

